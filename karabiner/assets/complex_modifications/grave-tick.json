{
  "title": "Grave Tick",
  "rules": [
    {
      "description": "Control + quote becomes grave and tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": ["any"],
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    }
  ]
}
