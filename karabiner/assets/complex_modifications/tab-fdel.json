{
  "title": "Holding h || l + d deletes forward || backwrds",
  "rules": [
    {
      "description": "Holding h || l + d deletes forward || backwrd",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "lazy": true
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "bdel",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_forward",
              "lazy": true
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "fdel",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "keycode": "h",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "h"
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "bdel",
                "value": 1
              },
              "lazy": true
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "bdel",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "keycode": "l",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "l"
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "fdel",
                "value": 1
              },
              "lazy": true
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "fdel",
                "value": 0
              }
            }
          ]
        }
      ]
    }
  ]
}
